<h1>Show Articles</h1>

<div>
    <h3><%= @article.title %></h3>
    <h4><%= @article.content %></h4>
</div>

<%= form_with model: ([@article, @article.comments.build]) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :user_email %>
    </div>
    
    <div>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
      <%= f.submit value: "Send comment" %>
    </div>
    
    <% end %>

<p><%= link_to "Back", root_path %></p>